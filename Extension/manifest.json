{
	"name": "UTwente Dark Themes",
	"description": "A collection of dark themes for UTwente services",
	"author": "Migush#4096",
	"version": "0.1",
	"page_action": {
		"default_icon": "icons/128.png",
		"default_title": "DARK UNI!"
	},
	"permissions": [
		"tabs",
		"management",
		"storage",
		"https://signon.utwente.nl/",
		"webRequest",
		"webRequestBlocking",
		"declarativeContent"
	],
	"content_scripts": [
		{
			"all_frames": true,
			"match_about_blank": true,
			"run_at": "document_start",
			"matches": [
				"https://*.utwente.nl/*",
				"https://*.horusapp.nl/*",
				"https://*.blindsidenetworks.com/*"
			],
			"js": [
				"content/injector.js"
			]
		}
	],
	"background": {
		"persistent": true,
		"scripts": [
			"background.js"
		]
	},
	"manifest_version": 2
}